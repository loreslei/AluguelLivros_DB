# Porta na qual o servidor Express irá rodar
PORT=3000

# Ambiente da aplicação: development, production ou test
NODE_ENV=development

# Dados para conexão com o banco de dados PostgreSQL
DB_HOST=localhost           # Host do banco de dados
DB_PORT=5432                # Porta padrão do PostgreSQL
DB_USER=seu_usuario         # Nome de usuário do banco
DB_PASSWORD=sua_senha       # Senha do banco
DATABASE_URL=postgresql://seu_usuario:sua_senha@localhost:5432/nome_do_banco
# → URL completa usada pelo Prisma para conectar ao banco

# Chave secreta usada para assinar tokens JWT (JSON Web Token)
JWT_SECRET=sua_chave_secreta
