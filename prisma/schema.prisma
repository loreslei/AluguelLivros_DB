generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  cpf       String   @id
  name      String
  email     String   @unique
  telephone String
  address   String

  rentals   Rental[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Author {
  id          Int      @id @default(autoincrement())
  name        String
  nationality String
  birth_date  DateTime

  books       Book[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id               Int     @id @default(autoincrement())
  title            String
  isbn             String  @unique @db.VarChar(13)
  publication_year Int
  publisher        String

  authorId Int
  author   Author @relation(fields: [authorId], references: [id])

  copies   Copy[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Copy {
  id        Int     @id @default(autoincrement())
  condition String
  available Boolean @default(true)
  bar_code  String  @unique

  bookId Int
  book   Book @relation(fields: [bookId], references: [id])

  rentals Rental[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rental {
  id         Int      @id @default(autoincrement())
  rental_date DateTime
  due_date    DateTime
  return_date DateTime?
  fine_value  Float?

  clientCpf String
  client    Client @relation(fields: [clientCpf], references: [cpf])

  copyId Int
  copy   Copy @relation(fields: [copyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
